# Environment variables for the entire platform with database and Livepeer integration

# ========================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ========================================

# Database Type (SQLite for dev, PostgreSQL for production)
USE_SQLITE=false

# PostgreSQL Configuration (Production)
POSTGRES_DB=cloud_video_monitoring
POSTGRES_USER=postgres
POSTGRES_PASSWORD=cloud_video_secure_2025
DB_HOST=postgres
DB_PORT=5432

# Database Connection Pool Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
